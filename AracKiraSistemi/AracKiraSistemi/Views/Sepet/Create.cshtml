@model AracKiraSistemi.Entities.Model.Sepet

@{ ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<h2>Araç Kirala</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Müşteri: </label>
            <div class="col-md-12">
                @Html.DropDownListFor(x => x.CustomerId, (List<SelectListItem>)ViewBag.musteriId, new { @class = "form-control" })
               
                @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Araç: </label>
            <div class="col-md-12">
                @Html.DropDownListFor(x => x.CarId, (List<SelectListItem>)ViewBag.arabaId, new { @class = "form-control" })            
                @Html.ValidationMessageFor(model => model.CarId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Alış Tarihi: </label>
            <div class="col-md-12">
                <input id="PurchaseDate" name="PurchaseDate" type="date" class="form-control" />
                @Html.ValidationMessageFor(model => model.PurchaseDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Teslim Tarihi: </label>
            <div class="col-md-12">
                <input id="DeliveryDate" name="DeliveryDate" type="date" class="form-control" />
                @Html.ValidationMessageFor(model => model.DeliveryDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <button type="submit" class="btn btn-outline-info btn-block">Ekle</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Git", "Index")
</div>
