@model AracKiraSistemi.Entities.Model.Musteri

@{ ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<h2>Müşteri Ekle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <label class="control-label col-md-2">Adı: </label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Soyadı: </label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Kullanıcı Adı: </label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.MusteriKAdi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MusteriKAdi, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Parola: </label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.MusteriParola, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MusteriParola, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Email: </label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.MusteriEmail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MusteriEmail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Doğum Yılı: </label>
        <div class="col-md-12">
            <input class="form-control" type="date" id="BornDate" name="BornDate" />
            @Html.ValidationMessageFor(model => model.BornDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Cinsiyet: </label>
        <div class="col-md-12">
            <select class="form-control" id="Gender" name="Gender">
                <option value="Bay">Bay</option>
                <option value="Bayan">Bayan</option>
            </select>
            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-12">
            <button type="submit" class="btn btn-outline-info btn-block">Ekle</button>
        </div>
    </div>
</div>
}


<div>
    @Html.ActionLink("Geri Git", "Index")
</div>