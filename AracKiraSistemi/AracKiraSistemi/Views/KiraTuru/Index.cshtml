@using AracKiraSistemi.Entities.Model
@model dynamic
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


@*<div class="row mb-3">
    <a href="/kiraturu/create" class="btn btn-info">kiralama türü ekle</a>
</div>*@

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kiralama Türleri</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Günlük Fiyatı</th>
                            <th>Haftalık Fiyatı</th>
                            <th>Aylık Fiyatı</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
            <tr>
                <td>@item.DailyPrice</td>
                <td>@item.WeeklyPrice</td>
                <td>@item.MonthlyPrice</td>
                <td>
                    <div class="btn-group">
                        <a href="/KiraTuru/Edit/@item.KiraTuruId" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="/KiraTuru/Delete/@item.KiraTuruId" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    
    <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#KiraTuruCreateModal"> Kira Türü Ekle</button>

    <div class="modal fade" id="KiraTuruCreateModal" tabindex="-1" role="dialog" aria-labelledby="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
                    <h4 class="modal-title" id="myModalLabel">Kira Türü Ekle</h4>
                </div>

                @using (Html.BeginForm("Create", "KiraTuru", FormMethod.Post))

                {

                    @Html.AntiForgeryToken()
                <div class="modal-body">

                    <div class="form-group">
                        <label>
                            Günlük Kiralama Ücreti:
                        </label>

                        <input type="text" id="DailyPrice" name="DailyPrice" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>
                            Haftalık Kiralama Ücreti:
                        </label>
                        <input type="text" id="WeeklyPrice" name="WeeklyPrice" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>
                            Aylık Kiralama Ücreti:
                        </label>
                        <input type="text" id="MonthlyPrice "name="MonthlyPrice" class="form-control" />
                    </div>
                 </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">İptal Et</button>
                                <button type="submit" class="btn btn-primary">Ekle</button>
                            </div>}
            </div>
        </div>
    </div>
</div>
