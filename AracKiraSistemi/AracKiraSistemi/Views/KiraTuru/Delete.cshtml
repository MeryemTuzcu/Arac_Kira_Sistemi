@model AracKiraSistemi.Entities.Model.KiraTuru

@{ ViewBag.Title = "Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<h3>Silmek istiyor musunuz?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Günlük Fiyat
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DailyPrice)
        </dd>

        <dt>
            Haftalık Fiyat
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WeeklyPrice)
        </dd>

        <dt>
            Aylık Fiyat
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MonthlyPrice)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Geri Git", "Index")
        </div>}
</div>